{
	"name": "vscode-beancount-formatter",
	"displayName": "Beancount Formatter",
	"description": "Beancount file formatter",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Formatters",
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:beancount"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Beancount Fomatter Configuration",
			"properties": {
				"beancountFormatter.binPath": {
					"type": "string",
					"default": "bean-format",
					"description": "Specify the path of bean-format, you need to install beancount first."
				}
			}
		},
		"languages": [
			{
				"id": "beancount",
				"aliases": [
					"beancount"
				],
				"extensions": [
					".bean",
					".beancount"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}